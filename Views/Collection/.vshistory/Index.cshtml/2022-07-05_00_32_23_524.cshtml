@model IEnumerable<Collection>
@{
    ViewData["Title"] = "Index";
}

<tbody>
@foreach (var obj in Model)
{
    <tr>
        <td width ="50%">
            @obj.Name
        </td>
        <td width ="30%">
            @obj.DisplayOrder
        </td>  
        <td>
            <div class="w-75 btn-group" role="group">

                <a asp-controller="Category" asp-action="Edit" class="btn btn-primary" asp-route-id="@obj.Id">
                    &nbsp; <i class="bi bi-currency-bitcoin"></i> Edit
                </a>
                <a asp-controller="Category" asp-action="Delete" class="btn btn-primary" asp-route-id="@obj.Id">
                    &nbsp; <i class="bi bi-currency-bitcoin"></i> Delete
                </a>                    
            </div>
        </td>
    </tr>
}
</tbody>