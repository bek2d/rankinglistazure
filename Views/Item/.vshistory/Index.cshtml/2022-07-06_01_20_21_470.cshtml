
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Middleware" class="btn btn-primary" asp-route-id="@Model.Collection.CollectionId">
                <i class="bi bi-plus-circle"></i> &nbsp; Create
            </a>
          
        </div>
    </div>
    <br /><br />

    <table  id="tblData"  class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>@Model.Item.CollectionId</th>
            <th>@Model.Item.Id</th>
            <th>@Model.Item.Name</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>

